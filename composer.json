{
    "name": "daniel-km/upgrade-to-omeka-s",
    "description": "Tools to upgrade from Omeka Classic to Omeka S and to install Omeka S easily",
    "type": "project",
    "license": "CECILL-2.1",
    "authors": [
        {
            "name": "Daniel Berthereau",
            "email": "Daniel.packagist@Berthereau.net"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "classmap": [
            "_scripts/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "UpgradeToOmekaS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
